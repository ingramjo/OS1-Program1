function transpose(){
#This is from lecture 1.4
	read myLine
	if test $myLine -ne 0
	then
		for i in $myLine
		do
			echo "i is: $i"
		done
	else
		echo "There was an error."
		exit 1
	fi
	
	exit 0

}

function mean(){
#lecture 1.5

	read myLine
	if test $myLine -ne 0
	then
		l_num = 0
		while read myLine
		do
			sum = 0
			count = 0
			mean = 0
			l_num = `expr $l_num + 1`
			echo "Processig line $l_num: $$myLine"

			for i in $myLine
			do
				number = $i
				count = `expr $count + 1`
				sum = `expr $sum + $number`
		done

			mean = `expr $sum/$count`
			echo "The mean of the matrix is: $mean"
		done < $1
	else
		echo "There was an error."
		exit 1
	fi

	exit 0
}

